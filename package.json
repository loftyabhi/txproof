{
  "name": "chain-receipt-monorepo",
  "private": true,
  "packageManager": "npm@10.9.0",
  "engines": {
    "node": ">=22.12.0",
    "npm": ">=10.9.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "schema:diff": "npm run --workspace=@repo/database schema:diff",
    "test:schema": "npm run --workspace=@repo/database test:schema"
  },
  "devDependencies": {
    "turbo": "latest",
    "concurrently": "^9.2.1",
    "typescript": "^5.3.2"
  },
  "overrides": {
    "cookie": "^0.7.2"
  }
}