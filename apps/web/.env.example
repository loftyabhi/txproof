# App URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# WalletConnect Project ID (for Web3 features)
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID="your_project_id_here"

# Email Configuration (for Contact Form)
# Gmail address to send from
GMAIL_USER="your-email@gmail.com"
# Gmail App Password (NOT your login password)
# Security > 2-Step Verification > App passwords
GMAIL_PASS="your-app-password-here"

# Database Connection (Transaction Pooler for Serverless)
# Format: postgres://[user]:[password]@[host]:6543/[db_name]?pooler=transaction
DATABASE_URL="postgres://postgres.xxxx:[password]@aws-0-region.pooler.supabase.com:6543/postgres?pooler=transaction"
