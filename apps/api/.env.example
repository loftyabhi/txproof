# Server Configuration
PORT=3001

# Database / Caching
# Redis Connection String (Optional but recommended for Price Oracle performance)
# Format: redis://[user]:[password]@[host]:[port]
REDIS_URL="redis://default:password@localhost:6379"

# Blockchain Providers
# Alchemy API Key for fetching historical prices and internal transactions
ALCHEMY_API_KEY="your_alchemy_api_key_here"

# Authentication / Security
# Secret key for signing JWT tokens for admin access
JWT_SECRET="your-secure-jwt-secret-key"
# Wallet address authorized to login as admin
ADMIN_ADDRESS="0xYourAdminWalletAddress"
