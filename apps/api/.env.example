# ------------------------------------------------------------------
# SERVER CONFIGURATION
# ------------------------------------------------------------------

# Port to run the server on
PORT=3001

# JWT Secret for Admin Authentication (Change this in production!)
JWT_SECRET="super-secret-jwt-key-change-me"

# Admin Wallet Address (Must match frontend)
# Admin Wallet Address (Must match frontend)
ADMIN_ADDRESS="0x..."

# Frontend URL (For Bill Link Generation)
# Production: https://txproof.xyz
FRONTEND_URL="http://localhost:3000"

# ------------------------------------------------------------------
# DATABASE (SUPABASE)
# ------------------------------------------------------------------

# Supabase URL and Service Key (Required for Queue & Storage)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# ------------------------------------------------------------------
# SOFT QUEUE (FREE-TIER SAFE)
# ------------------------------------------------------------------

# Max concurrent bill generation jobs (Keep low for free tier)
MAX_CONCURRENT_JOBS=2

# Safety timeout to reset stuck jobs (Minutes)
JOB_PROCESSING_TIMEOUT_MINUTES=5

# Average Job Time (Seconds) - Used for Queue ETA
BILL_AVG_PROCESS_TIME_SECONDS=6

# Minimum polling interval clients should respect (ms)
BILL_POLL_MIN_INTERVAL_MS=2000

# ------------------------------------------------------------------
# FEATURE FLAGS (FREE TIER SAFETY)
# ------------------------------------------------------------------

# Enable ENS Name Resolution (Slow, Uses Mainnet RPC)
ENABLE_ENS=false

# Enable Internal Transaction Tracing (Heavy API Usage)
ENABLE_INTERNAL_TX=false

# Auto-cleanup old bills inline with requests (Disable for high load)
ENABLE_AUTO_CLEANUP=false

# ------------------------------------------------------------------
# BLOCKCHAIN PROVIDERS
# ------------------------------------------------------------------

# Alchemy API Key (Required for resolving names and fetching data)
ALCHEMY_API_KEY="your_alchemy_key"

# Optional: Enable Debug Mode for Classifier
# DEBUG_CLASSIFIER="true"

# ------------------------------------------------------------------
# LEGACY / REMOVED
# ------------------------------------------------------------------
# Redis and BullMQ configurations are no longer used.
# Worker Concurrency is strictly controlled by MAX_CONCURRENT_JOBS.
