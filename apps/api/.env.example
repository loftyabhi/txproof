# ------------------------------------------------------------------
# SERVER CONFIGURATION
# ------------------------------------------------------------------

# Port to run the server on
PORT=3001

# JWT Secret for Admin Authentication (Change this in production!)
JWT_SECRET="super-secret-jwt-key-change-me"

# Admin Wallet Address (Must match frontend)
ADMIN_ADDRESS="0x..."

# ------------------------------------------------------------------
# DATABASE (POSTGRESQL)
# ------------------------------------------------------------------

# Prisma Database Connection String
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# For Supabase Transaction Pooler (Port 6543): use ?pgbouncer=true
DATABASE_URL="postgresql://postgres:[password]@db.[project].supabase.co:6543/postgres?pgbouncer=true"

# Direct Connection String (Required for migrations if using connection pooling)
# DIRECT_URL="postgresql://postgres:[password]@db.[project].supabase.co:5432/postgres"

# ------------------------------------------------------------------
# REDIS (QUEUE & CACHE)
# ------------------------------------------------------------------

# Primary Connection String (Render/Heroku/Railway style)
# Format: redis://[user]:[password]@[host]:[port]
# Example: rediss://default:password@oregon-redis.render.com:6379
REDIS_URL="redis://localhost:6379"

# Manual Fallback (If REDIS_URL is not set)
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# Worker Concurrency (Number of jobs to process in parallel)
WORKER_CONCURRENCY=3

# ------------------------------------------------------------------
# BLOCKCHAIN PROVIDERS
# ------------------------------------------------------------------

# Alchemy API Key (Required for resolving names and fetching data)
ALCHEMY_API_KEY="your_alchemy_key"

# Optional: Enable Debug Mode for Classifier
# DEBUG_CLASSIFIER="true"

# ------------------------------------------------------------------
# INDEXER CONFIGURATION
# ------------------------------------------------------------------

# Mode: 'production' (Default) or 'backfill' (Local/Manual)
INDEXER_MODE="production"

# Batch Size for Backfill Mode (Default: 1000)
# BACKFILL_BATCH_SIZE=2000
